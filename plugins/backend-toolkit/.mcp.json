      "env": {
        "ALLOWED_DOMAINS": "grpc.io"
      },
      "description": "gRPC official documentation"
    },
    "websocket-docs": {
      "command": "uvx",
      "args": ["mcp-server-fetch"],
      "env": {
        "ALLOWED_DOMAINS": "developer.mozilla.org,socket.io,websocket.org"
      },
      "description": "WebSocket documentation"
