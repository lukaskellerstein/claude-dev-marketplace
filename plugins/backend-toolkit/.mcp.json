    "nats-docs": {
      "command": "uvx",
      "args": ["mcp-server-fetch"],
      "env": {
        "ALLOWED_DOMAINS": "docs.nats.io,nats.io"
      },
      "description": "NATS messaging system documentation"
    },
    "rabbitmq-docs": {
      "command": "uvx",
      "args": ["mcp-server-fetch"],
