{
  "mcpServers": {
    "rest-graphql-docs": {
      "command": "uvx",
      "args": ["mcp-server-fetch"],
      "env": {
        "ALLOWED_DOMAINS": "graphql.org,www.graphql.org"
      },
      "description": "REST API and GraphQL documentation"
    },
    "grpc-docs": {
      "command": "uvx",
